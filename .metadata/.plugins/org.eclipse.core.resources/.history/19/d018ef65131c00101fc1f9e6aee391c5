package chapter06;

import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.println("숫자를 입력하세요.");
		int num = scan.nextInt();
		if (num > 0) {
			System.out.println("정수입니다.");

		} else if (num < 0) {
			System.out.println("음수입니다.");

		}

	}

}
